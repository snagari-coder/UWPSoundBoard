<Page x:ConnectionId='1'
    x:Class="UWPSoundBoard.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPSoundBoard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:model="using:UWPSoundBoard.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel>
            <Button x:ConnectionId='2' Name="HamburgerButton"
                    RelativePanel.AlignLeftWithPanel="True"
                    FontFamily="Segoe MDL2 Assests"
                    Content="&#xE700;" />
            <Button x:ConnectionId='3' Name="BackButton"
                    RelativePanel.RightOf="HamburgerButton"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE0A6;" />
            <SplitView x:ConnectionId='4' Grid.Row="1" Name="MySplitView"
                       DisplayMode="CompactOverlay"
                       CompactPaneLength="45"
                       OpenPaneLength="200" >
                <SplitView.Pane>
                    <ListView x:ConnectionId='5' Name="MenuItemsListView"></ListView>
                </SplitView.Pane>
                        <SplitView.Content>
                            <Grid Margin="40,40,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    
                                </Grid.RowDefinitions>
                        <MediaElement x:ConnectionId='6' Name ="MyMediaElement" AutoPlay="True" />
                        <TextBlock x:ConnectionId='7' Name="CategoryTextBlock" Text="All Sounds" FontSize="24" />
                        <GridView x:ConnectionId='8' Grid.Row="1" 
                                  Name="SoundGridView" 
                                  IsItemClickEnabled="True"
                                                               
                                  >
                            <GridView.ItemTemplate>
                                <DataTemplate                          >
                                    <Image x:ConnectionId='10' Name="MyImage" Height="112" Width="101"                                    />
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                            </Grid>
                        </SplitView.Content>
                
            </SplitView>

        </RelativePanel>



    </Grid>
</Page>

